<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="lab4_5.SearchWindow"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,38,0,0" TextWrapping="Wrap" Text="Название краткое" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,94,0,0" TextWrapping="Wrap" Text="Название полное" VerticalAlignment="Top"/>
        <TextBox  x:Name="tbNameShort" HorizontalAlignment="Center" Margin="0,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbNameLong" HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="bSearchByname" Content="Найти" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top"  Width="120" Click="bSearchByname_Click"/>
        <Button x:Name="bGoBack" Content="Вернуться назад" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Width="120" Click="bGoBack_Click"/>
    </Grid>
</Window>
